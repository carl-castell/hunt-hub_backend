{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/routes/index.js",
    "dev": "nodemon --exec tsx src/routes/index.ts",
    "studio": "DRIZZLE_DRIVER=pg drizzle-kit studio",
    "db:gen": "drizzle-kit generate",
    "db:push": "DRIZZLE_DRIVER=pg drizzle-kit push",
    "db:push:neon": "drizzle-kit push",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "docker compose down -v && docker compose up -d && node -e \"console.log('Waiting for DB...')\" && tsx -e \"setTimeout(()=>process.exit(0), 2000)\" && npm run db:push && npm run db:seed"
  }
,
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@faker-js/faker": "^9.2.0",
    "@neondatabase/serverless": "^0.10.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.34.1",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "nodemailer": "^6.9.15",
    "nodemailer-mailgun-transport": "^2.1.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.2",
    "@types/nodemailer": "^6.4.16",
    "@types/nodemailer-mailgun-transport": "^1.4.6",
    "drizzle-kit": "^0.25.0",
    "nodemon": "^3.1.7",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
